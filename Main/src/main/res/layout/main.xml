<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llTopContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llResetContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5">
            <fragment
                android:name="com.layer8apps.stopwatch.main.fragments.ResetFragment"
                android:id="@+id/fragReset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_reset"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLapCountContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5">
            <fragment
                android:name="com.layer8apps.stopwatch.main.fragments.LapCounterFragment"
                android:id="@+id/fragLapCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_lapcount"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llMiddleContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">
        <fragment
            android:name="com.layer8apps.stopwatch.main.fragments.TimeKeeperFragment"
            android:id="@+id/fragTimeKeeper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_time" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llBottomContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">
        <fragment
            android:name="com.layer8apps.stopwatch.main.fragments.StartStopFragment"
            android:id="@+id/fragStartStop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_startstop" />
    </LinearLayout>
</LinearLayout>